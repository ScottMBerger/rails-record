<p id="notice"><%= notice %></p>

<h1>Listing Activity</h1><%= link_to 'New Post', new_post_path, class: "waves-effect waves-light btn" %>

<table class="highlight">
  <thead>
    <tr>
      <th>User</th>
      <th>Notes</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
