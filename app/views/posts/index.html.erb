<p id="notice"><%= notice %></p>

<h1>Listing Activity</h1><%= link_to 'New Record', new_post_path, class: "waves-effect waves-light btn white-text" %>

<table class="highlight">
  <thead>
    <tr>
      <th>User</th>
      <th>Notes</th>
      <th class="valign-wrapper">Created&nbsp;  <div class="switch">
    <label>
      <input class="check" type="checkbox">
      <span class="lever"></span>
    </label>
  </div>
      <label for="box"></label></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td class="ago" style="width: 350px;"><%= time_ago_in_words(post.created_at) %> ago</td>
        <td class="norm" style="display: none; width: 350px;"><%= post.created_at %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
